<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unina.oobd2324_37.boundary.HomeController">
    <children>
        <VBox spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0">
            <!-- Titolo -->
            <Label text="Gestione Ordini" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <!-- Sezione di filtro -->
            <HBox spacing="10.0">
                <VBox spacing="5.0">
                    <Label text="Filtra per Utente:" />
                    <TextField fx:id="userFilterField" promptText="Inserisci nome utente" />
                </VBox>
                <VBox spacing="5.0">
                    <Label text="Da:" />
                    <DatePicker fx:id="startDatePicker" />
                </VBox>
                <VBox spacing="5.0">
                    <Label text="A:" />
                    <DatePicker fx:id="endDatePicker" />
                </VBox>
                <Button text="Applica Filtro" fx:id="applyFilterButton" onAction="#handleApplyFilter" style="-fx-cursor: hand;" />
                <Button text="Reset Filtro" fx:id="resetFilterButton" onAction="#handleResetFilter" style="-fx-cursor: hand;" />
            </HBox>

            <!-- Tabella degli ordini -->
            <TableView fx:id="orderTable" prefHeight="400.0">
                <columns>
                    <TableColumn fx:id="orderIdColumn" text="ID Ordine" prefWidth="100.0" />
                    <TableColumn fx:id="orderUserColumn" text="Utente" prefWidth="150.0" />
                    <TableColumn fx:id="orderDateColumn" text="Data" prefWidth="150.0" />
                    <TableColumn fx:id="orderTotalColumn" text="Totale" prefWidth="100.0" />
                </columns>
            </TableView>

            <!-- Pulsanti per azioni su ordini selezionati -->
            <HBox spacing="10.0">
                <Button text="Visualizza Dettagli" fx:id="viewDetailsButton" onAction="#handleViewDetails" disable="true" style="-fx-cursor: hand;" />
                <Button text="Elimina Ordine" fx:id="deleteOrderButton" onAction="#handleDeleteOrder" disable="true" style="-fx-cursor: hand;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
